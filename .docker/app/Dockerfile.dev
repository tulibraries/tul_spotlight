FROM ruby:2.7-alpine

# This playbook is for development.
# Perform configuraiton and development steps from within
# container shell

LABEL Steven Ng <steven.ng@temple.edu>
COPY .docker/app/entrypoint-dev.sh /usr/bin/entrypoint.sh
WORKDIR /app
USER root
RUN apk add -U --no-cache \
      bash=5.1.4-r0 \
      libxslt=1.1.34-r1 \
      tzdata=2021a-r0 \
      shared-mime-info=2.1-r0 \
      mariadb-connector-c=3.1.13-r0 && \
    apk add -U --no-cache --virtual build-dependencies \
      git=2.32.0-r0 \
      build-base=0.5-r2 \
      libxslt-dev=1.1.34-r1 \
      mariadb-dev=10.5.11-r0 \
      nodejs=14.17.1-r0 \
      yarn=1.22.10-r0 && \
    gem install bundler:2.2.17 && \
    gem install rails:6.0.3.7 && \
    chmod +x /usr/bin/entrypoint.sh

# Add a script to be executed every time the container starts.
ENTRYPOINT ["/usr/bin/entrypoint.sh"]
